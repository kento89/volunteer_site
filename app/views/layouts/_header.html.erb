<header class="header-bg">
  <nav class="navbar navbar-light">
    <div class="container">
      <%= link_to image_tag("logomain.png", width: 67), root_path, class: "rounded-circle" %>
      <% if customer_signed_in? %>
        <div class="ml-5">ようこそ<%= current_customer.last_name %>様</div>
      <% elsif recruiter_signed_in? %>
        <div class="ml-5">ようこそ<%= current_recruiter.last_name %>様</div>
      <% end %>
      <ul class="navbar-nav flex-row navbar">
        <% if customer_signed_in? %>
            <li class="nav-item"><%= link_to "マイページ", public_customers_path(:id), class: "btn btn-outline-primary mr-2" %></li>
            <li class="nav-item"><%= link_to "ボランティア一覧", public_volunteers_path, class: "btn btn-outline-primary mr-2" %></li>
            <li class="nav-item"><%= link_to "ボランティアステータス", public_customers_path(:id), class: "btn btn-outline-primary mr-2" %></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-primary mr-2" %></li>
        <% elsif recruiter_signed_in? %>
            <li class="nav-item"><%= link_to "マイページ", recruiter_recruiter_path(:id), class: "btn btn-outline-primary mr-2" %></li>
            <li class="nav-item"><%= link_to "ボランティア一覧",recruiter_volunteers_path, class: "btn btn-outline-primary mr-2" %></li>
            <li class="nav-item"><%= link_to "新規投稿",new_recruiter_volunteer_path, class: "btn btn-outline-primary mr-2" %></li>
            <li class="nav-item"><% if  0 < Notification.where(visited_id: current_recruiter.id, checked: false).count %><%= link_to "未読通知#{Notification.where(visited_id: current_recruiter.id, checked: false).count}件", notifications_path, class: "btn btn-outline-primary mr-2" %><% else %><%= link_to "通知一覧",notifications_path, class: "btn btn-outline-primary mr-2" %><% end %></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_recruiter_session_path, method: :delete, class: "btn btn-outline-primary mr-2" %></li>
        <% else %>
          <li class="nav-item mr-2"><%= link_to "トップページ", root_path, class: "btn btn-outline-primary" %></li>
          <li class="nav-item mr-2"><%= link_to "ボランティア一覧", homes_about_path, class: "btn btn-outline-primary" %></li>
          <li class="nav-item mr-2"><%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-primary" %></li>
          <li class="nav-item mr-2"><%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-primary" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
