<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "recruiters/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :last_name, '姓' %><%= f.text_field :last_name, autofocus: true %>
    <%= f.label :first_name, '名' %><%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, 'セイ' %><%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.label :first_name_kana, 'メイ' %><%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :postal_number, '郵便番号' %><%= f.text_field :postal_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address, '住所' %><%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone_number, '電話番号' %><%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
 
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード確認' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
    <%= f.label :image, 'プロフィール画像' %><%= f.attachment_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "recruiters/shared/links" %>
