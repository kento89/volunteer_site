<h1>recruiter/room詳細</h1>
ルームID<%= @room.id %>
<% if @messages.blank? %>
  <p>メッセージはありません</p>
<% else %>
  <p>メッセージがあります</p>
  <% @messages.each do |message| %>
    <div>
      <% if message.customer %>
        <span><%= message.customer.name %>:</span>
      <% else %>
        <span>スタッフ:</span>
      <% end %>
      <span><%= message.message %></span>
    </div>
  <% end %>
<% end %>
<%= form_with model: [:recruiters, @message], url: recruiter_messages_path, local: true do |f| %>
    <%= f.text_field :message, class:"address-new-form" %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.submit "送信", class:"register-green-btn" %>
<% end %>