<div class="about-image">
  <div class="container mt-3 mb-5">
    <h1 class="text-center mt-3 mb-3">ボランティア一覧</h1>
    
    <!--検索フォーム-->
    <div class="search text-right">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :name %>
        <%= f.submit :'検索' %>
      <% end %>
    </div>
  
    <% @volunteer.each do |volunteer| %>
    <div class="row mt-3 mb-3 border-index">
      <div class="col-10 mt-2 mb-2">
        <div class="row">
          <h4 class="col-3 text-center"><%=  volunteer.name %></h4>
          <div class="col-2 btn btn-light mr-3"><%=  volunteer.genre %></div>
          <div class="col-4 btn btn-light mr-3"><%=  volunteer.place %></div>
          <div class="col-2 btn btn-light mr-3"><%= volunteer.volunteer_status %></div>
        </div>
        <div class="row mt-5 mb-3">
          <div class="col-8">
            <div class="frame">
              <% volunteer.images.first(1).each do |image| %>
                <%= image_tag image, :size => '400x250', format: "jpg" %>
              <% end %>
            </div>
          </div>
          <div class="col-4 d-flex align-items-center">
            <%= volunteer.a_litle_explanation %>
          </div>
        </div>
      </div>
      <div class="col-2 d-flex align-items-end mb-5">
        <%= link_to "詳しく見る", recruiter_volunteer_path(volunteer), class: "button" %>
      </div>
    </div>
    <% end %>
    <div class="text-center">
      <%= paginate @volunteer %>
    </div>
  </div>
</div>