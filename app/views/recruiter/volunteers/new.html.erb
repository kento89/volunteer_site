<main>
  <%#= assets_javascripts_tag 'public/new' %>
  <div class="container">
    <h2>ボランティア登録</h2>
    <div class="row">
      <div class="col-8">
        <%= form_with model: @volunteer, url: {controller: 'volunteers', action: 'create'}, local:true, method: :post do |f| %>
          <div class="row">
            <div class="col-4">
              <p>ボランティア名</p>
            </div>
            <div class="col-8">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <p>概要　100文字以内<br />
              ※ボランティア一覧に載せる説明</p>
            </div>
            <div class="col-8">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <p>説明</p>
            </div>
            <div class="col-8">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <p>実施場所</p>
            </div>
            <div class="col-8">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <p>参加するメリット</p>
            </div>
            <div class="col-8">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <p>必要物品</p>
            </div>
            <div class="col-8">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <p>注意点</p>
            </div>
            <div class="col-8">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <p>コメント</p>
            </div>
            <div class="col-8">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <p>期日</p>
            </div>
            <div class="col-8">
              <%= f.text_field :limit, class: "form-control datetimepicker-input", id: "limit", data: {toggle: "datetimepicker", target: "#limit"} %>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <p>ジャンル</p>
            </div>
            <div class="col-8">
              <%= f.select :genre, options_for_select(Volunteer.genres.keys), include_blank: "ジャンル選択" %>
            </div>
          </div>
          
      </div>
      <div class="col-4">
        <input type="file" id="myImage" accept="image/*" onchange="setImage(this);" onclick="this.value = '';">
        <img id="preview" class="mt-3 d-flex">
        <%#= form_with model:@image, url: {controller: 'image', action: 'create'}, local:true method: post do |f| %>
          <%#= f.attachment_field :image  %>
        <%# end %>
        <%# @images.each do |image| %>
          <%#= f.attachment_image_tag image, :image %>
        <%# end %>
          <%#= f.submit '投稿' %>
        <% end %>
      </div>
    </div>
  </div>
</main>