<div class="about-image">
  <div class="container mt-3">
  <h2 class="text-center">マイページ</h2>
    <div class="row mt-5 mb-5">
      <div class="col-lg-3 show_image">
        <%= image_tag @recruiter.image, :size => '250x250', format: "jpg", class: "img-fit rounded-circle" %>
       </div>
      <div class="col-lg-6">
        <div class="row customer_show">
          <div class="col-lg-5">
            <p class="bg-light text-center">名前</p>
          </div>
          <div class="col-lg-5 text-center">
            <%= @recruiter.last_name %><%= @recruiter.first_name %>
          </div>
        </div>
        <div class="row customer_show">
          <div class="col-lg-5">
            <p class="bg-light text-center">フリガナ</p>
          </div>
          <div class="col-lg-5 text-center">
            <%= @recruiter.last_name_kana %><%= @recruiter.first_name_kana %>
          </div>
        </div>
        <div class="row customer_show">
          <div class="col-lg-5">
            <p class="bg-light text-center">郵便番号</p>
          </div>
          <div class="col-lg-5 text-center">
            <%= @recruiter.postal_number %>
          </div>
        </div>
        <div class="row customer_show">
          <div class="col-lg-5">
            <p class="bg-light text-center">住所</p>
          </div>
          <div class="col-lg-5 text-center">
            <%= @recruiter.address %>
          </div>
        </div>
        <div class="row customer_show">
          <div class="col-lg-5">
            <p class="bg-light text-center">電話番号</p>
          </div>
          <div class="col-lg-5 text-center">
            <%= @recruiter.phone_number %>
          </div>
        </div>
        <div class="row customer_show">
          <div class="col-lg-5">
            <p class="bg-light text-center">メールアドレス</p>
          </div>
          <div class="col-lg-5 text-center">
            <%= @recruiter.email %>
          </div>
        </div>
      </div>
      <%# end %>
      <div class="col-lg-3">
        <h5 class="text-center mb-3 recruiter_volunteer_index">投稿中のボランティア</h5>
          <% @volunteers.each do |volunteer| %>
            <div class="text-center link border-bottom">
              <%= link_to (recruiter_volunteer_path(volunteer)) do %>
                  <p class="mt-3">開始日時： <%= l volunteer.time, format: :short %></p>
                  <p><%= volunteer.name %></p>
              <% end %>
            </div>
          <% end %>
      </div>
    </div>
    <div class="text-center mb-5">
      <%= link_to "編集する", edit_recruiter_recruiter_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>