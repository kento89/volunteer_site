<%= render partial: 'layouts/header' %>
<main>
  <div class="container mt-3">
  <h2>マイページ</h2>
    <div class="row mt-5 mb-5">
      <div class="col-3">
        <%= attachment_image_tag @recruiter, :image, size: 15*15, fallback: "logo.png", class: "img-fit rounded-circle" %>
       </div>
      <div class="col-6">
        <div class="row">
          <div class="col-5">
            <p class="bg-light text-center">名前</p>
          </div>
          <div class="col-5 text-center">
            <%= @recruiter.last_name %><%= @recruiter.first_name %>
          </div>
        </div>
        <div class="row">
          <div class="col-5">
            <p class="bg-light text-center">フリガナ</p>
          </div>
          <div class="col-5 text-center">
            <%= @recruiter.last_name_kana %><%= @recruiter.first_name_kana %>
          </div>
        </div>
        <div class="row">
          <div class="col-5">
            <p class="bg-light text-center">郵便番号</p>
          </div>
          <div class="col-5 text-center">
            <%= @recruiter.postal_number %>
          </div>
        </div>
        <div class="row">
          <div class="col-5">
            <p class="bg-light text-center">住所</p>
          </div>
          <div class="col-5 text-center">
            <%= @recruiter.address %>
          </div>
        </div>
        <div class="row">
          <div class="col-5">
            <p class="bg-light text-center">電話番号</p>
          </div>
          <div class="col-5 text-center">
            <%= @recruiter.phone_number %>
          </div>
        </div>
        <div class="row">
          <div class="col-5">
            <p class="bg-light text-center">メールアドレス</p>
          </div>
          <div class="col-5 text-center">
            <%= @recruiter.email %>
          </div>
        </div>
      </div>
      <%# end %>
      <div class="col-3">
        <h5 class="text-center mb-3">投稿中のボランティア</h5>
        <div class="volunteer-index">
          <% @volunteers.each do |volunteer| %>
            <div class="text-center mt-2 mb-2"><%=link_to volunteer.name %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="text-center">
      <%= link_to "編集する", edit_recruiter_recruiter_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</main>