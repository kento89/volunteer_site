<div class="container mt-3">
<h2 class="text-center">マイページ</h2>
  <div class="row mt-5 mb-5">
    <div class="col-3">
      <%= image_tag @customer.image, :size => '250x250', format: "jpg", fallback: "no-image.jpg", class: "img-fit rounded-circle" %>
      <div class="my_comment mt-3">
        <p><%= @customer.comment %></p>
      </div>
    </div>
    <div class="col-6">
      <div class="row">
        <div class="col-5">
          <p class="bg-light text-center">名前</p>
        </div>
        <div class="col-5 text-center">
          <%= @customer.last_name %><%= @customer.first_name %>
        </div>
      </div>
      <div class="row">
        <div class="col-5">
          <p class="bg-light text-center">フリガナ</p>
        </div>
        <div class="col-5 text-center">
          <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
        </div>
      </div>
      <div class="row">
        <div class="col-5">
          <p class="bg-light text-center">郵便番号</p>
        </div>
        <div class="col-5 text-center">
          <%= @customer.postal_number %>
        </div>
      </div>
      <div class="row">
        <div class="col-5">
          <p class="bg-light text-center">住所</p>
        </div>
        <div class="col-5 text-center">
          <%= @customer.address %>
        </div>
      </div>
      <div class="row">
        <div class="col-5">
          <p class="bg-light text-center">電話番号</p>
        </div>
        <div class="col-5 text-center">
          <%= @customer.phone_number %>
        </div>
      </div>
      <div class="row">
        <div class="col-5">
          <p class="bg-light text-center">メールアドレス</p>
        </div>
        <div class="col-5 text-center">
          <%= @customer.email %>
        </div>
      </div>
      <div class="row">
        <div class="col-5">
          <p class="bg-light text-center">ボランティア経験</p>
        </div>
        <div class="col-5 text-center">
          <%= @customer.experience %>
        </div>
      </div>
    </div>
    <%# end %>
    <div class="col-3">
      <h5>予定しているボランティア</h5>
      <% @volunteer_customer.each do |volunteer| %>
        <div class="text-center link border-bottom">
          <%= link_to (recruiter_volunteer_path(volunteer)) do %>
            <p class="mt-3">開始日時: <%= l volunteer.volunteer.time, format: :short %></p>
            <p><%= volunteer.volunteer.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "編集する", edit_public_customers_path, class: "btn btn-outline-primary mb-5" %>
  </div>
</div>